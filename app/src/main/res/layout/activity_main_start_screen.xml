<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainStartScreen">
    <TextView

        android:id="@+id/idGoToListApartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="Apparent"
        android:textSize="30sp"
        android:textAllCaps="false" />

    <!--Button for adding data to Firebase-->
    <Button
        android:id="@+id/idBtnGoToAppartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/idGoToListApartment"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="goToApparment"
        android:text="List of Apartment"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnGoToManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBtnGoToAppartment"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="goToAddApartment"
        android:text="Add Apartment"
        android:textAllCaps="false" />

</RelativeLayout>